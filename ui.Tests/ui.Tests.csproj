        <IsPackable>false</IsPackable>
        <InvariantGlobalization>true</InvariantGlobalization>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="bunit" Version="1.31.3" />
        <PackageReference Include="FluentAssertions" Version="6.12.0" />
