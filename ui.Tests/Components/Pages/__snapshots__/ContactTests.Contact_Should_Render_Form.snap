<h1 class="page-header sticky-top d-flex gap-2 justify-content-start align-items-center bg-body"><span>Contact</span>

        </h1>

<div class="card"><div class="card-body"><form class="d-flex flex-column gap-3" blazor:onsubmit="1">

                
                

                <div><label>Email</label>
                    <div class="input-group"><input type="email" tabindex="1" placeholder="you@awesome-email.com" data-kind="email" class="form-control valid" value="" blazor:oninput="4" />
                        <span class="input-group-text"><i class="bi bi-envelope-at"></i></span></div>
                    </div>

                <div><label>Subject</label>
                    <div class="input-group"><input type="text" tabindex="2" placeholder="What would you like to inquire about?" maxlength="100" data-kind="subject" class="form-control valid" value="" blazor:oninput="5" />
                        <span class="input-group-text"><i class="bi bi-pencil"></i></span></div>
                    <div class="d-flex"><div class="flex-fill"></div>
                        <i class="flex-shrink-0 small text-primary">0 / 100</i></div></div>

                <div><label>Message</label>
                    <div class="input-group"><textarea rows="5" tabindex="3" placeholder="Share your thoughts, ideas, or questions..." maxlength="2000" data-kind="message" class="form-control valid" value="" blazor:oninput="6"></textarea>
                        <span class="input-group-text"><i class="bi bi-journal-text"></i></span></div>
                    <div class="d-flex"><div class="flex-fill"></div>
                        <i class="flex-shrink-0 small text-primary">0 / 2000</i></div></div>

                <div><div class="input-group d-flex flex-wrap justify-content-end"><input type="text" tabindex="4" placeholder="Verification Code" maxlength="6" data-kind="verification" class="form-control valid" value="" blazor:oninput="7" />

                        <div class="input-group-text d-flex flex-wrap justify-content-center align-self-center p-0 px-1"><span>12345</span></div>

                        <div class="flex-shrink-0 d-flex flex-wrap"><button type="button" class="input-group-text btn btn-primary rounded-0" tabindex="7" blazor:onclick="2"><i class="bi bi-arrow-repeat"></i></button>
                            <span class="input-group-text"><i class="bi-shield-lock"></i></span></div></div>
                    </div>

                <div class="d-flex justify-content-end gap-2 flex-wrap form-actions"><button type="reset" class="btn btn-secondary px-3" tabindex="6" blazor:onclick="3">
                        Reset
                    </button>
                    <button type="submit" class="btn btn-primary px-3" tabindex="5"><span class="px-3">Submit</span></button></div></form></div></div>
