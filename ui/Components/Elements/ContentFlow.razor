@if (IsLoading)
{
    if (LoadingContent is { })
    {
        @LoadingContent
    }
    else
    {
        <Skeleton />
    }
}
else if (HasError)
{
    if (ErrorContent is { })
    {
        @ErrorContent
    }
    else
    {
        <GenericError Message="@ErrorMessage">
            @ErrorExtraContent
        </GenericError>
    }
}
else if (HasContent)
{
    @ChildContent
}
else if (!HasContent)
{
    if (NoContent is { })
    {
        @NoContent
    }
    else
    {
        <GenericNoContent Message="@NoContentMessage">
            @NoContentExtraContent
        </GenericNoContent>
    }
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public bool HasError { get; set; }

    [Parameter]
    public bool HasContent { get; set; }
    
    [Parameter]
    public string ErrorMessage { get; set; } = string.Empty;
    
    [Parameter]
    public string NoContentMessage { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public RenderFragment? NoContent { get; set; }
    
    [Parameter]
    public RenderFragment? NoContentExtraContent { get; set; }

    [Parameter]
    public RenderFragment? ErrorContent { get; set; }

    [Parameter]
    public RenderFragment? ErrorExtraContent { get; set; }

    [Parameter]
    public RenderFragment? LoadingContent { get; set; }
}